# use python slim image
FROM python:slim

# Set the working directory in the container
WORKDIR /app/prediction

# Copy the requirements file into the container
COPY requirements.txt /app/prediction/requirements.txt

# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the working directory contents into the container
COPY src/app/prediction /app/prediction

# Copy the model file into the container
COPY models/model_rf_clf.pkl /app/prediction/model_rf_clf.pkl

# Make port 8001 available
EXPOSE 8001

# Run uvicorn server when the container launches
CMD ["uvicorn", "prediction_api:app_predict", "--host", "0.0.0.0", "--port", "8001"]



